{
  "name": "velzia",
  "version": "1.0.0",
  "description": "Mini erp",
  "license": "ISC",
  "author": "Alejandro Decaroli y Gonzalo Zinni",
  "type": "module",
  "main": "app.js",
  "build": "tsc -p ./tsconfig.json",
  "scripts": {
    "migrate": "node --loader ts-node/esm node_modules/.bin/mikro-orm migration:up",
    "migrate:create": "node --loader ts-node/esm node_modules/.bin/mikro-orm migration:create",
    "migrate:down": "node --loader ts-node/esm node_modules/.bin/mikro-orm migration:down",
    "migrate:list": "node --loader ts-node/esm node_modules/.bin/mikro-orm migration:list",
    "migrate:pending": "node --loader ts-node/esm node_modules/.bin/mikro-orm migration:pending",
    "migrate:fresh": "node --loader ts-node/esm node_modules/.bin/mikro-orm migration:fresh",
    "schema:create": "node --loader ts-node/esm node_modules/.bin/mikro-orm schema:create",
    "schema:update": "node --loader ts-node/esm node_modules/.bin/mikro-orm schema:update",
    "schema:drop": "node --loader ts-node/esm node_modules/.bin/mikro-orm schema:drop",
    "build": "tsc -p ./tsconfig.json",
    "start": "node ./dist/src/app.js",
    "start:dev": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./dist/src/app.js\""
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.5.9",
    "@mikro-orm/core": "^6.5.9",
    "@mikro-orm/postgresql": "^6.5.9",
    "@mikro-orm/seeder": "^6.5.9",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "5.0.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.15.3",
    "@types/pg": "^8.11.14",
    "ts-node": "^10.9.2",
    "tsc-watch": "6.2.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@mikro-orm/migrations": "^6.5.9",
    "@mikro-orm/sql-highlighter": "1.0.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.15.6",
    "reflect-metadata": "0.2.2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "tsConfigPath": "./tsconfig.json",
    "configPaths": [
      "./mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
